<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Calculator"
    android:orientation="vertical"
    android:background="@drawable/as"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/edittext"
        android:background="@drawable/etbg"
        android:editable="false"
        android:gravity="right|bottom"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cls"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="C"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
          android:layout_marginRight="11dp"
            />
        <Button
            android:layout_marginRight="11dp"
            android:id="@+id/del"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"

            android:text="DEL"/>
        <Button
            android:layout_marginRight="11dp"
            android:id="@+id/div"
            android:layout_width="80dp"
            android:textSize="20sp"
            android:text="/"
            android:layout_marginTop="10dp"

            android:layout_height="80dp" />
        <Button
            android:layout_marginRight="11dp"
            android:layout_marginTop="10dp"
            android:id="@+id/mul"
            android:text="*"
            android:layout_width="80dp"
            android:textSize="20sp"
            android:layout_height="80dp" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
             />
        <Button
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:text="8"
           />
        <Button
            android:id="@+id/btn9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="20sp"
            android:text="9"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"

             />
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/min"
            android:text="-"

            android:textSize="20sp"
            android:layout_width="80dp"
            android:layout_height="80dp"
             />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:text="5"
            />
        <Button
            android:id="@+id/btn6"

            android:textSize="20sp"
            android:text="6"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/add"
            android:text="+"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="20sp"
             />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textSize="20sp"
                        android:text="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="11dp"

                     />
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/btn2"
                        android:text="2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textSize="20sp"

                        android:layout_marginRight="11dp"
                         />
                    <Button
                        android:id="@+id/btn3"

                        android:textSize="20sp"
                        android:text="3"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="11dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                         />

                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/btn0"
                        android:layout_width="172dp"
                        android:textSize="20sp"
                        android:text="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="11dp"
                        android:layout_height="80dp"

                         />
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/pos"
                        android:text="."
                        android:layout_width="80dp"
                        android:textSize="20sp"
                        android:layout_height="80dp"
                         />

                    </LinearLayout>
                </LinearLayout>
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/equ"
                android:text="="
                android:layout_width="80dp"
                android:textSize="20sp"
                android:layout_height="170dp"
                />

            </LinearLayout>


</LinearLayout>
